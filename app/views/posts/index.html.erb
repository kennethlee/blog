<h1>Posts</h1>
<table>
  <tbody>
    <%= link_to "New post", new_post_path %>
    <% @posts.reverse_each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post) %></td>
        <td>Posted on <%= post.created_at %></td>
        <td><%= simple_format post.body.truncate(750) %></td>
        <td><%= link_to 'read more', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>
