<%# <h1>Posts</h1> %>
<% if admin_signed_in? %>
  <%= link_to "New post", new_post_path %>
<% end %>
<%= link_to 'About', about_path %>
<% @posts.each do |post| %>
    <h3><td><%= link_to post.title, post_path(post) %></td></h3>
    <div class="date"><%= post.created_at.strftime("%B %d, %Y") %></div>
    <p><%= simple_format post.body.truncate(750) %><%= link_to 'read more', post %></p>
<% end %>
